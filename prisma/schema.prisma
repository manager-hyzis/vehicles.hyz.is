generator client {
  provider            = "prisma-client"
  importFileExtension = ""
  output              = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String?
  name          String
  phone         String
  image         String?
  logo          String?
  type          UserType  @default(PRIVATE)
  role          UserRole  @default(USER)
  status        UserStatus @default(ACTIVE)
  
  street        String?
  address       String?
  neighborhood  String?
  city          String
  state         String
  country       String   @default("BR")
  zipCode       String?
  
  latitude      Float?
  longitude     Float?
  
  reputation    Float?    @default(0)
  
  acceptOffers  Boolean  @default(true)
  acceptPartnerOffers Boolean @default(true)
  
  emailVerified DateTime?
  
  vehicles      Vehicle[]
  favorites     Favorite[]
  contacts      Contact[]
  transactions  Transaction[]
  reports       Report[]
  reviews       Review[]
  subscriptions Subscription[]
  messagesSent  Message[] @relation("MessagesSent")
  messagesReceived Message[] @relation("MessagesReceived")
  notifications Notification[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@index([email])
  @@index([type])
  @@index([role])
  @@index([city])
}

enum UserType {
  PRIVATE
  PESSOA_JURIDICA
  RESELLER
  GARAGE
  DEALERSHIP
}

enum UserRole {
  USER
  ADMIN
  MODERADOR
  SUPORTE
}

enum UserStatus {
  ACTIVE
  INACTIVE
}

model Vehicle {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  category      String
  brand         String
  model         String
  version       String
  year          Int
  
  title         String
  mileage       Int
  color         String
  engineSize    Float
  fuel          String
  transmission  String
  
  price         Decimal   @db.Decimal(10, 2)
  resalePrice   Decimal?  @db.Decimal(10, 2)
  fipeValue     Decimal?  @db.Decimal(10, 2)
  fipeCode      String?
  fipeMonth     String?
  
  description   String    @db.Text
  
  features      Json
  observations  String[]
  
  city          String
  state         String
  
  status        VehicleStatus @default(ACTIVE)
  views         Int       @default(0)
  
  latitude      Float?
  longitude     Float?
  
  images        VehicleImage[]
  favorites     Favorite[]
  contacts      Contact[]
  reports       Report[]
  reviews       Review[]
  highlights    Highlight[]
  moderation    Moderation?
  messages      Message[]
  notifications Notification[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@index([userId])
  @@index([status])
  @@index([brand])
  @@index([city])
}

enum VehicleStatus {
  ACTIVE
  PAUSED
  SOLD
}

model VehicleImage {
  id            String    @id @default(cuid())
  vehicleId     String
  vehicle       Vehicle   @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  
  imageUrl      String
  imageKey      String
  isCover       Boolean   @default(false)
  order         Int
  
  createdAt     DateTime  @default(now())
  
  @@index([vehicleId])
}

model Favorite {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  vehicleId     String
  vehicle       Vehicle   @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  
  createdAt     DateTime  @default(now())
  
  @@unique([userId, vehicleId])
  @@index([userId])
}

model Contact {
  id            String    @id @default(cuid())
  vehicleId     String
  vehicle       Vehicle   @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  userId        String?
  user          User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  senderName    String
  senderEmail   String
  senderPhone   String
  message       String    @db.Text
  
  createdAt     DateTime  @default(now())
  
  @@index([vehicleId])
  @@index([userId])
}

model Transaction {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  service       String
  amount        Decimal   @db.Decimal(10, 2)
  paymentMethod String
  status        TransactionStatus @default(PENDING)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@index([userId])
}

enum TransactionStatus {
  PENDING
  COMPLETED
  FAILED
  CANCELLED
}

model Report {
  id            String    @id @default(cuid())
  vehicleId     String
  vehicle       Vehicle   @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  userId        String?
  user          User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  type          ReportType
  description   String?   @db.Text
  status        ReportStatus @default(PENDING)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@index([vehicleId])
  @@index([status])
}

enum ReportType {
  GOLPE
  CONTEUDO_INADEQUADO
  VEICULO_ROUBADO
  OUTRO
}

enum ReportStatus {
  PENDING
  REVIEWING
  RESOLVED
  DISMISSED
}

model Review {
  id            String    @id @default(cuid())
  sellerId      String
  seller        User      @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  vehicleId     String
  vehicle       Vehicle   @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  
  rating        Int       // 1-5
  comment       String?   @db.Text
  recommend     Boolean
  
  reviewToken   String?   @unique
  tokenUsed     Boolean   @default(false)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@index([sellerId])
  @@index([vehicleId])
}

model Subscription {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  planId        String
  plan          Plan      @relation(fields: [planId], references: [id])
  
  status        SubscriptionStatus @default(ACTIVE)
  startDate     DateTime
  endDate       DateTime
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@index([userId])
  @@index([status])
}

enum SubscriptionStatus {
  ACTIVE
  EXPIRED
  CANCELLED
}

model Plan {
  id            String    @id @default(cuid())
  name          String    // "3 meses", "6 meses", "9 meses"
  duration      Int       // em meses
  price         Decimal   @db.Decimal(10, 2)
  description   String?   @db.Text
  
  userTypes     String[]  // PRIVATE, RESELLER, GARAGE, DEALERSHIP
  
  subscriptions Subscription[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Highlight {
  id            String    @id @default(cuid())
  vehicleId     String
  vehicle       Vehicle   @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  
  name          String?
  description   String?   @db.Text
  type          HighlightType
  price         Decimal   @db.Decimal(10, 2)
  duration      Int       // em dias
  
  startDate     DateTime
  endDate       DateTime
  
  createdAt     DateTime  @default(now())
  
  @@index([vehicleId])
  @@index([type])
}

enum HighlightType {
  DESTAQUE
  SUPER_DESTAQUE
  OFERTAO
}

model Coupon {
  id            String    @id @default(cuid())
  code          String    @unique
  type          CouponType
  value         Decimal   @db.Decimal(10, 2)
  maxUses       Int
  usedCount     Int       @default(0)
  expiresAt     DateTime
  active        Boolean   @default(true)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@index([code])
  @@index([active])
}

enum CouponType {
  PERCENTAGE
  FIXED
}

model Message {
  id            String    @id @default(cuid())
  senderId      String
  sender        User      @relation("MessagesSent", fields: [senderId], references: [id], onDelete: Cascade)
  receiverId    String
  receiver      User      @relation("MessagesReceived", fields: [receiverId], references: [id], onDelete: Cascade)
  
  vehicleId     String?
  vehicle       Vehicle?  @relation(fields: [vehicleId], references: [id], onDelete: SetNull)
  
  content       String    @db.Text
  isRead        Boolean   @default(false)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@index([senderId])
  @@index([receiverId])
  @@index([vehicleId])
  @@index([isRead])
}

model Notification {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title         String
  message       String    @db.Text
  type          NotificationType
  
  vehicleId     String?
  vehicle       Vehicle?  @relation(fields: [vehicleId], references: [id], onDelete: SetNull)
  
  isRead        Boolean   @default(false)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@index([userId])
  @@index([isRead])
  @@index([type])
}

enum NotificationType {
  VEHICLE_APPROVED
  VEHICLE_REJECTED
  PAYMENT_RECEIVED
  NEW_MESSAGE
  REVIEW_RECEIVED
  SUBSCRIPTION_EXPIRING
  HIGHLIGHT_EXPIRING
}

model Moderation {
  id            String    @id @default(cuid())
  vehicleId     String    @unique
  vehicle       Vehicle   @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  
  status        ModerationStatus @default(PENDING)
  reason        String?   @db.Text
  reviewedBy    String?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@index([status])
}

enum ModerationStatus {
  PENDING
  APPROVED
  REJECTED
}
